<VirtualHost *:80>
    ServerName {{ osticket_servername }}
{% if osticket_serveralias|length > 0 %}
{%   for alias in osticket_serveralias %}
    ServerAlias {{ alias }} 
{%   endfor %}
{% endif %}
    DocumentRoot {{ osticket_documentroot }}
    ErrorLog logs/{{ osticket_errorlog }}
    CustomLog logs/{{ osticket_customlog }} common
    <Directory "{{ osticket_documentroot }}">
        Options +FollowSymLinks
        AllowOverride All
        Order allow,deny
        Allow from all
    </Directory>
</VirtualHost>
